<view class='background'>
  <image src='/static/pic/myteam.jpg' style='width:150%;height:150%;margin-left:-25%;margin-top:-25%' ></image>
</view>
<view class='team'>
     <view style='width:50%;height:30%;margin-left:25%;'>
         <image src='{{data[0].pic}}' style='width:180rpx;height:180rpx;margin-left:10%;margin-top:10%;border-radius:100%' bindtap='se1'></image>
     </view>
     <view style='width:100%;height:30%;margin-top:5%;'>
         <image src='{{data[1].pic}}' style='width:180rpx;height:180rpx;margin-left:5%;margin-top:10%;border-radius:100%'bindtap='se2'></image>
         <image src='{{data[2].pic}}' style='width:180rpx;height:180rpx;margin-left:15%;margin-top:10%;border-radius:100%'bindtap='se3'></image>
     </view>
     <view style='width:100%;height:30%;margin-top:5%;'>
         <image src='{{data[3].pic}}' style='width:180rpx;height:180rpx;margin-left:5%;margin-top:10%;border-radius:100%'bindtap='se4'></image>
         <image src='{{data[4].pic}}' style='width:180rpx;height:180rpx;margin-left:15%;margin-top:10%;border-radius:100%'bindtap='se5'></image>
     </view>
</view>

<view wx-if='{{showmodel}}' class='showmodel'>
   <view class='bac' bindtap='bac'>
   </view>
   <view style='position:absolute;top:0rpx;left:0rpx;width:100%;height:50%;border-radius:0 0 20rpx 20rpx;'>
   <image src='/static/cutboat.png' style='width:100%;height:100%;'></image>
   </view>
   <view style='width:180rpx;height:180rpx;margin-left:210rpx;top:-80rpx;border-radius:100%;position:absolute;border:solid 3rpx white;'>
     <image src='{{data[index-1].pic}}'style='width:100%;height:100%;border-radius:100%'></image>
   </view>

   <view style='width:100%;position:absolute;top:50%;height:50%;display:flex;justify-content: center;'>
   <text style='position:absolute;top:10%;'>{{data[index-1].desc}}</text>
   <text style='position:absolute;margin-top:10%;top:10%;font-size:80rpx;color:blue'>{{data[index-1].name}}</text>
   <text style='position:absolute;margin-top:30%;top:10%;'>-{{data[index-1].date}}-</text>
   <view class='cap'>
   <text style='height:100%;display: flex;flex-direction:column;justify-content: center;font-size:50rpx;'>{{data[index-1].c}}</text>
   </view>
   </view>
</view>

