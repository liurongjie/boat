<!--pages/toboat/toboat.wxml-->
<scroll-view scroll-y style='position:absolute;width:100%;height:100%'>
<title></title>

<tobuy wx:if="{{buy_index==1}}" bindtap="change_evaluation" 
production_name="{{pro_data.production_name}}" real_time_price="{{pro_data.real_time_price}}" start_price="{{pro_data.start_price}}"
start_time="{{pro_data.start_time}}" location="{{pro_data.location}}"
type="{{pro_data.type}}" production_id="{{pro_data.production_id}}" onboat_people_number="{{pro_data.onboat_people_number}}"  end_time="{{pro_data.end_time}}" cut_times="{{pro_data.cut_times}}"></tobuy>

<prepay wx:if="{{buy_index==2}}" ></prepay>

<mymap wx:if="{{buy_index==3}}" 
    production_name="{{pro_data.production_name}}"
    location="{{pro_data.location}}" location_latitude="{{pro_data.latitude}}" location_longitude="{{pro_data.longitude}}" bindtap="backto_boat"> </mymap>


<evaluation wx:if="{{buy_index==4}}" bindtap="backto_boat"></evaluation>

<bottom taskfunc='goboat' bindtap='changestatus_buy'></bottom>
</scroll-view>




