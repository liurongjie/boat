
<!-- 商家轮播图 -->
<swiper class="swiper" indicator-dots="true" autoplay="true" interval="5000" duration="1000">  
    <block wx:for="{{picture_production}}" wx:for-item="item">  
      <swiper-item>  
        <image src="{{item}}" class="slide-image" mode="aspectFill"/>  
      </swiper-item>  
    </block>  
</swiper>

<!-- swiper组件下的商品详细价格、参团人数等信息 -->
<view class='flex-wrp'>  
  <text class='desc_price_symbol'>￥</text><text class=".desc_price_num">{{2112}}</text>
  <view class=" desc_oldprice_people_num">                    
    <view class=".desc_startprice">初始价格为{{2890}}</view>
    <view class=".desc_cut_num">{{2}}人正在拼</view>
  </view>
  <view class="to_end_progress" >
    <view class='progress_text_view'>
      <view class='progress_text'>
        距本轮结束{{12}}:{{10}}:{{54}}:{{40}}
      </view>
      <view class='progress_yes'>  
        <progress percent='{{20}}' show-info  stroke-width="11" activeColor='#FAF75A' backgroundColor='#EDC11C'/>
      </view>
    </view>
  </view>          
</view>

