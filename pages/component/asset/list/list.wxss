.boat {
  position: relative;
  width: 300rpx;
  height: 70rpx;
  border-radius: 40rpx;
  text-align: center;
  line-height: 70rpx;
  color: #f5f5f5;
}
.show{
  position: fixed;
top: 0rpx;
  width: 750rpx;
  height: 100%;
  background: white;
  z-index: 1000;
}
.cicle {
  position: relative;
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  margin-left: 100rpx;
  margin-top: 20rpx;
}

.name {
  position: relative;
  display: flex;
  flex-direction: column;
  margin-left: 240rpx;
  margin-top: -100rpx;
  width: 360rpx;
  height: 100rpx;
  font-size: 20rpx;
  font-weight: 50;
  color: white;
}

.beike {
  position: relative;
  width: 90%;
  left: 5%;
  height: 50%;
  background: linear-gradient(to bottom right, #fe5e5e, #fe8557);
  box-shadow: -1rpx 0 30rpx -6rpx;
  overflow: hidden;
}

.w {
  position: absolute;
  left: 140rpx;
  font-size: 20rpx;
  color: white;
  top: 40rpx;
  font-weight: 700;
}

.middle {
  position: absolute;
  width: 90%;
  left: 5%;
  height: 420rpx;
  margin-top: 20rpx;
  border-radius: 25rpx;
  background: white;
}

.middle .l0 {
  position: relative;
  width: 95%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  line-height: 70rpx;
}

.w1 {
  position: absolute;
  left: 300rpx;
  font-size: 20rpx;
  color: white;
  top: 40rpx;
  text-decoration: underline;
}

.b {
  position: absolute;
  right: 50rpx;
  width: 100rpx;
  height: 30rpx;
  border-radius: 25rpx;
  font-weight: 700;
  text-align: center;
  line-height: 30rpx;
  border: 2rpx solid white;
  color: white;
  top: 36rpx;
  font-size: 20rpx;
}

.bo {
  position: absolute;
  font-style: italic;
  font-size: 150rpx;
  font-weight: 800;
  color: white;
  opacity: 0.1;
  right: 20rpx;
  top: -20rpx;
}

.ord {
  position: relative;
  width: 90%;
  left: 5%;
  height: 20%;
  background: white;
  border-radius: 25rpx;
  font-size: 20rpx;
}

.c1 {
  position: absolute;
  width: 100%;
  height: 75%;
  bottom: 0rpx;
  display: flex;
  direction: row;
}

.c2 {
  position: relative;
  width: 20%;
  height: 90%;
  margin-top: 5%;
  display: flex;
  direction: column;
  justify-content: center;
}

.middle .l1 {
  position: relative;
  width: 100%;
  height: 70rpx;
  display: flex;
  flex-direction: row;
  line-height: 70rpx;
  margin-top: 10rpx;
}

.middle image {
  position: relative;
  width: 40rpx;
  height: 40rpx;
  margin-top: 20rpx;
}

.middle text {
  position: relative;
  font-size: 30rpx;
  margin-left: 100rpx;
  color: rgba(0, 0, 0, 0.7);
}
