<view class='boat'>
    <text style='font-weight:600;font-size:35rpx;'>当前订单</text>
</view>


<scroll-view scroll-y class="scroll">
  <block wx:for="{{lists}}" wx:key="*this">  
    <view style=' background: {{color}}; margin-bottom: 40rpx; height: 160rpx;width: 80%;margin-left:5%;margin-top:2%;border-radius:40rpx;box-shadow: grey 0rpx -2rpx 20rpx -6rpx ;' data-index="{{index}}" bindtap='selectindex'>
    <view class='m'>
     <image src='{{item.url}}' class='img'></image>
     <text class='nm'>{{item.name}}</text>
     <text class='dist'>距离武汉大学{{item.dist}}km</text>
     <text class='fen'>往期大珈评分99分</text>
     <text class='ren'>参与人数70人</text>
     <text class='shen'>{{state}}</text>
     <text class='fu'>¥</text>
     <text class='p'>{{price}}</text>
     <text class='p1'>初始价格为{{preprice}}</text>
     </view>
    </view>  
  </block>
</scroll-view> 

