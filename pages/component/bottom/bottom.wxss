.bottom{
  position: fixed;
  width: 100%;
  height: 150rpx;
  bottom: 0rpx;
  background-color:white;
  display: flex;
  flex-direction: row;
}

.bottom .row-row{
  width:100%;
  display:flex;
  flex-direction: row;
}


@keyframes shake {
	 from,
  60%,
  75%,
  to {
    animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
  }
  from {
    opacity: 0;
    transform: translate3d(400rpx, 0, 0);
  }
  to {
    transform: translate3d(0, 0, 0);
  }
}
