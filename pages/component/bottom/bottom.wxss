.bottom{
  position: fixed;
  width: 100%;
  height: 110rpx;
  bottom: 0rpx;
  background-color:white;
  display: flex;
  flex-direction: row;
}

.bottom .row-row{
  width:100%;
  display:flex;
  flex-direction: row;
}

.row-column{
  display: flex;
  flex-direction: column;
 /* flex:1 1 auto;*/
  /* border: 5rpx solid grey; */
  align-items: stretch;
}

.column-hcenter{
    align-items: center;
}

.row-one_button{
  width:35rpx;
  height:100%;
  padding-left: 0px;
  padding-right: 0px;
  font-size: 14rpx;
  line-height: 2;
  color:auto;
  border-radius: 0;
}

button::after{
  border:none;
  border-radius: 0;
}

@keyframes shake {
	 from,
  60%,
  75%,
  to {
    animation-timing-function: cubic-bezier(0.215, 0.61, 0.355, 1);
  }
  from {
    opacity: 0;
    transform: translate3d(400rpx, 0, 0);
  }
  to {
    transform: translate3d(0, 0, 0);
  }
}
